{
  "mode": "debug",
  "use_multicore": true,
  "max_processes": 16,
  "request_max_retry": 5,

  "_comment_key_file": "file path to api keys, use relative path from utils.py",
  "key_file": "../private/keys.json",

  "ccxt": {
    "wait": 35,
    "rate_limit": 3000,
    "fee_delay": 1800,
    "orderbook_delay": 25,
    "orderbook_size": 400
  },

  "backtest": {
    "fast_mode": true,
    "_comment_base_timeframe": "in second",
    "base_timeframe": 60,
    "margin": true
  },

  "matplot": {
    "enable": false,
    "plot_indicators": true,
    "window_size": [15, 9],
    "plot_timeframes": {
      "_comment_plot_timeframes": "specify timeframes to plot for each market, default is 1h",
      "default": "1h",
      "BTC/USD": "1h",
      "ETH/USD": "1h"
    }
  },

  "trading": {
    "trade_portion": 0.6,

    "_conmment_maintain_portion": "ratio of balance in wallet and balance in markets",
    "maintain_portion": 0.2,

    "_comment_limit_price_diff": "price difference (buffer) to the top price in orderbook"
    "limit_price_diff": 0.003,

    "bitfinex": {
      "margin_rate": 3.33,
      "min_trade_value": 30,

      "markets": [
        "BTC/USD"
      ],
      "timeframes": [
          "1m",
          "30m",
          "1h"
      ]
    },
    "strategy": {
      "ohlcv_days": 30
    }
  },

  "analysis": {
    "fee": 0.002,
    "margin_fee": 0.003,
    "margin_rate": 3.33,

    "_comment_min_order_value": "minimal USD value is allwed to open an order",
    "min_order_value": 10,

    "funds": {
      "bitfinex": {
        "USD": 1000
      }
    },
    "exchanges": {
      "bitfinex": {
