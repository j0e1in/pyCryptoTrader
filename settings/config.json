{
  "mode": "debug",
  "use_multicore": true,
  "max_processes": 16,

  "constants": {
    "wait": 45,
    "rate_limit": 2500
  },

  "backtest":{
    "fast_mode": true,
    "_comment_base_timeframe": "in second",
    "base_timeframe": 60,
    "margin": true
  },

  "matplot": {
    "enable": false,
    "plot_indicators": true,
    "window_size": [15, 9],
    "plot_timeframes": {
      "_comment_plot_timeframes": "specify timeframes to plot for each market, default is 1h",
      "default": "1h",
      "BTC/USD": "1h",
      "ETH/USD": "1h"
    }
  },

  "database":{
    "dbname_exchange": "exchange"
  },

  "trader": {
    "fee": 0.002,
    "margin_fee": 0.001,
    "margin_rate": 3,
    "_comment_min_order_value": "minimal USD value is allwed to open an order",
    "min_order_value": 10,
    "funds": {
      "bitfinex": {
        "USD": 1000
      }
    },
    "exchanges": {
      "bitfinex": {
        "_comment_markets": "markets to trade",
        "markets": [
          "ETH/USD"
        ],
        "markets_not_used": [
          "BTC/USD",
          "BCH/USD",
          "ETH/USD",
          "ETC/USD",
          "DASH/USD",
          "LTC/USD",
          "NEO/USD",
          "XMR/USD",
          "XRP/USD",
          "ZEC/USD",

          "AVT/USD",
          "BTG/USD",
          "DAT/USD",
          "EDO/USD",
          "EOS/USD",
          "ETP/USD",
          "IOT/USD",
          "OMG/USD",
          "QTUM/USD",
          "RRT/USD",
          "SAN/USD"
        ],
        "_comment_currencies": "Currencies can be traded (have history data downloaded)",
        "currencies": [
          "USD",
          "BTC",
          "BCH",
          "DASH",
          "ETH",
          "ETC",
          "LTC",
          "NEO",
          "XMR",
          "XRP",
          "ZEC"
        ],
        "currencies_not_used": [
          "AVT",
          "BTG",
          "DAT",
          "EDO",
          "EOS",
          "ETP",
          "IOT",
          "OMG",
          "QTUM",
          "RRT",
          "SAN"
        ],
        "timeframes": [
          "1m",
          "5m",
          "30m",
          "1h"
        ],
        "timeframes_not_used": [
          "15m",
          "3h",
          "6h",
          "12h",
          "1d"
        ]
      }
    }
  },

  "params": {
      "trade_portion": 0.5,

      "rsi_tf": "1h",
      "rsi_conf": 40,
      "rsi_period": 14,
      "rsi_upper_bound": 70,
      "rsi_lower_bound": 30,

      "wvf_tf": "1h",
      "wvf_conf": 50,
      "wvf_lbsdh": 22,
      "wvf_bbl": 20,
      "wvf_bbsd": 2.0,
      "wvf_lbph": 50,
      "wvf_ph": 0.85,
      "wvf_ltLB": 40,
      "wvf_mtLB": 14,
      "wvf_strg": 3
  }
